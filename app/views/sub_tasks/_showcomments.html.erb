<h1>Comments</h1>
<div class = "postblock"
<% @task_comments.each do |task_comment| %>
    <div class= "post">
      <div class="post-header">
          
        <span class="name" title="Title of the post"><%=task_comment.name%>              
      </div>
      <div class="postdate">
         <span class="date" title="Date posted"> Posted:<%= task_comment.created_at %>
      </div>
      <div class="float-right">
        <span class="Name" title="Date this contribution was posted">Name :<%= @users.find(task_comment.user_id).name%>
      </div>
            
      
      <div class="post-message">
        <span class="post" title="Post"><%= task_comment.comment %>
      </div>
    </div>
    <hr class="subtle-divider">
 
<% end %>

</div>




<%= link_to 'New Task comment', new_task_comment_path %>
