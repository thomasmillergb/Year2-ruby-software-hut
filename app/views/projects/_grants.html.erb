

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Start</th>
      <th>Deadline</th>
      <th>Status</th>
      <th>Funder</th>
      <th>Awarded To</th>
      <th>Grant Code</th>
      <th>Final Report</th>
      <th></th>
    </tr>
  </thead>

  <tbody>
   
      
    <% @grants.each do |grant| %>
      
      <tr>
        
        <td><%= grant.name %></td>
        <td><%= grant.start %></td>
        <td><%= grant.deadline %></td>
        <td><%= grant.status %></td>
        <td><%= grant.funder_id %></td>
        <td><%= grant.code %></td>        
        <td><%= grant.awarded_to %></td>
	<td><%= grant.finalreport %></td>

        <td><%= link_to 'List Tasks', tasks_path(Project.find_by_grant_id(grant)) %>
        <td><%= link_to 'Destroy', grant, method: :delete, data: { confirm: 'Are you sure?' } %></td>
     
 </tr>
     
    <% end %>
    
  
  </tbody>
</table>

